        document.getElementById('currentYear').textContent = new Date().getFullYear();

        function downloadCSV(csv, filename) {
            let csvFile;
            let downloadLink;
            const bom = new Uint8Array([0xEF, 0xBB, 0xBF]); // BOM for UTF-8
            csvFile = new Blob([bom, csv], {type: "text/csv;charset=utf-8;"});
            downloadLink = document.createElement("a");
            downloadLink.download = filename;
            downloadLink.href = window.URL.createObjectURL(csvFile);
            downloadLink.style.display = "none";
            document.body.appendChild(downloadLink);
            downloadLink.click();
            document.body.removeChild(downloadLink);
        }

        function exportTableToCSV(tableId, filename) {
            let csv = [];
            const table = document.getElementById(tableId);
            if (!table) {
                console.error("Error: Table with ID '" + tableId + "' not found.");
                showToast(`Error: No se pudo encontrar la tabla "${tableId}" para exportar.`, true);
                return;
            }
            const rows = table.querySelectorAll("tr");
            
            for (let i = 0; i < rows.length; i++) {
                let row = [], cols = rows[i].querySelectorAll("td, th");
                for (let j = 0; j < cols.length; j++) {
                    let data = cols[j].innerText.replace(/(\r\n|\n|\r)+/gm, " ").replace(/(\s\s+)/g, ' ').trim();
                    data = data.replace(/"/g, '""'); 
                    if (data.includes(',') || data.includes('"')) {
                        data = '"' + data + '"';
                    }
                    row.push(data);
                }
                csv.push(row.join(","));        
            }
            downloadCSV(csv.join("\n"), filename);
        }

        const collapsibles = document.querySelectorAll(".collapsible-button");
        collapsibles.forEach(button => {
            button.addEventListener("click", function() {
                this.classList.toggle("active");
                const content = this.nextElementSibling;
                const arrow = this.querySelector(".arrow");
                if (content.style.maxHeight && content.style.maxHeight !== "0px") {
                    content.style.maxHeight = "0px";
                    if(arrow) arrow.classList.remove("open");
                    content.classList.remove("open");
                } else {
                    content.style.display = 'block'; 
                    content.style.maxHeight = content.scrollHeight + "px";
                    if(arrow) arrow.classList.add("open");
                    content.classList.add("open");
                } 
            });
        });

        // Funcionalidad para copiar plantilla de informe
        const copyReportButton = document.getElementById('copyReportButton');
        const reportTemplateContent = document.getElementById('reportTemplateContent');
        const toast = document.getElementById('toast');

        function showToast(message, isError = false) {
            toast.textContent = message;
            toast.style.backgroundColor = isError ? '#ef4444' : '#10b981'; // red-500 for error, green-500 for success
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        if (copyReportButton && reportTemplateContent) {
            copyReportButton.addEventListener('click', () => {
                const reportText = reportTemplateContent.innerText;
                // Usar document.execCommand para compatibilidad, ya que navigator.clipboard puede estar restringido en iframes
                const textArea = document.createElement("textarea");
                textArea.value = reportText;
                textArea.style.position = "fixed"; // Evitar que se desplace la página
                textArea.style.left = "-9999px";
                document.body.appendChild(textArea);
                textArea.focus();
                textArea.select();
                try {
                    document.execCommand('copy');
                    showToast('Plantilla copiada al portapapeles');
                } catch (err) {
                    console.error('Error al copiar la plantilla: ', err);
                    showToast('Error al copiar la plantilla.', true);
                }
                document.body.removeChild(textArea);
            });
        }

    </script>
</body>
</html>
